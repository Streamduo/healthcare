<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_000000"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_app"
        >
        <include layout="@layout/layout_title_bar"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/comm_height_80">
            <RelativeLayout
                android:id="@+id/rl_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/icon_avatar_bg"
                android:layout_margin="@dimen/margin_10"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_user_avatar"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15988888888"
                android:layout_toRightOf="@id/rl_avatar"
                android:layout_marginTop="@dimen/margin_12"
                />
            <TextView
                android:id="@+id/tv_card_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员卡号：15988888888"
                android:layout_toRightOf="@id/rl_avatar"
                android:layout_below="@id/tv_user_name"
                android:layout_marginTop="@dimen/margin_10"
                />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_deal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
