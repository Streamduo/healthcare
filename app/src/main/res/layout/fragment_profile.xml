<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_000000"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >
    <android.support.v4.widget.SwipeRefreshLayout
         android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_app"
        >
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_shopping_cart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/comm_height_60"
                    android:text="@string/tab_me"
                    android:gravity="center_horizontal"
                    android:background="@color/black_000000"
                    android:textColor="@color/white_FFFFFF"
                    android:paddingTop="@dimen/comm_height_28"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/comm_height_80">
                    <RelativeLayout
                        android:id="@+id/rl_avatar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/icon_avatar_bg"
                        android:layout_margin="@dimen/margin_10"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_user_avatar"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_toRightOf="@id/rl_avatar"
                        android:layout_marginTop="@dimen/margin_12"
                        />
                    <TextView
                        android:id="@+id/tv_card_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员卡号："
                        android:layout_toRightOf="@id/rl_avatar"
                        android:layout_below="@id/tv_user_name"
                        android:layout_marginTop="@dimen/margin_10"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_8"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/comm_height_48"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/share_bg"
                        android:layout_marginLeft="@dimen/margin_16"
                        android:layout_marginRight="@dimen/margin_16"
                        >
                        <TextView
                            android:id="@+id/tv_share"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/share_courtesy"
                            android:drawableLeft="@drawable/icon_share"
                            android:gravity="center"
                            android:drawablePadding="@dimen/padding_8"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/comm_height_48"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/share_bg"
                        android:layout_marginRight="@dimen/margin_16"
                        >
                        <TextView
                            android:id="@+id/tv_js"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/order_settlement"
                            android:drawableLeft="@drawable/icon_order_js"
                            android:gravity="center"
                            android:drawablePadding="@dimen/padding_8"
                            />
                    </LinearLayout>
                </LinearLayout>
                <include layout="@layout/layout_profile_item"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
