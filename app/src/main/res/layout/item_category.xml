<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/comm_height_90"
    android:orientation="horizontal"
    android:id="@+id/rl_business"
    >
    <ImageView
        android:id="@+id/item_iv_category"
        android:layout_width="@dimen/comm_width_120"
        android:layout_height="@dimen/comm_height_90"
        android:src="@drawable/ic_launcher"
        android:layout_margin="@dimen/margin_10"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/item_tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="圣香园"
        android:layout_toRightOf="@id/item_iv_category"
        android:layout_marginTop="@dimen/margin_10"
        />

    <TextView
        android:id="@+id/item_tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_iv_category"
        android:layout_marginTop="@dimen/margin_6"
        android:layout_below="@id/item_tv_category"
        />

    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_iv_category"
        android:layout_marginTop="@dimen/margin_6"
        android:layout_below="@id/item_tv_phone"
        />
</RelativeLayout>
