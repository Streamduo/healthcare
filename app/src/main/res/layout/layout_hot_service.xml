<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/comm_height_60"
        android:background="@color/transparent"
        >
        <TextView
            android:id="@+id/tv_home_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hot_service"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_16"
            android:gravity="center"
            android:background="@drawable/icon_server_bg"
            android:layout_margin="@dimen/margin_10"
            android:padding="@dimen/margin_10"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_server_left"
            android:layout_toLeftOf="@id/tv_home_server"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_server_right"
            android:layout_toRightOf="@id/tv_home_server"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_hot_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_16"
        />
</LinearLayout>
