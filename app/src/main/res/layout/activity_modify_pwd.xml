<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_000000"
    android:fitsSystemWindows="true"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_app"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <include layout="@layout/layout_title_bar"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/comm_height_80">
                <RelativeLayout
                    android:id="@+id/rl_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/icon_avatar_bg"
                    android:layout_margin="@dimen/margin_10"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_user_avatar"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15988888888"
                    android:layout_toRightOf="@id/rl_avatar"
                    android:layout_marginTop="@dimen/margin_12"
                    />
                <TextView
                    android:id="@+id/tv_card_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员卡号：15988888888"
                    android:layout_toRightOf="@id/rl_avatar"
                    android:layout_below="@id/tv_user_name"
                    android:layout_marginTop="@dimen/margin_10"
                    />
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_divider_line"
                android:scaleType="fitXY"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/comm_height_60"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员信息"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_modify_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改密码"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_phone_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/comm_height_60"
                android:orientation="horizontal"
                android:background="@drawable/icon_input_bg"
                android:layout_below="@id/iv_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginRight="@dimen/margin_24"
                android:layout_marginLeft="@dimen/margin_24"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="旧密码"
                    android:textColor="@color/white_FFFFFF"
                    android:paddingLeft="@dimen/padding_36"
                    android:gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/et_old_pwd"
                    android:layout_width="@dimen/comm_width_180"
                    android:layout_height="@dimen/comm_height_32"
                    android:background="@color/transparent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:textColor="@color/white_FFFFFF"
                    android:password="true"
                    android:hint="输入旧密码"
                    android:textColorHint="#c8c8c8"
                    android:maxLength="6"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_new_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/comm_height_60"
                android:orientation="horizontal"
                android:background="@drawable/icon_input_bg"
                android:layout_below="@id/ll_phone_number"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_24"
                android:layout_marginLeft="@dimen/margin_24"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/new_pwd"
                    android:textColor="@color/white_FFFFFF"
                    android:paddingLeft="@dimen/padding_36"
                    android:gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="@dimen/comm_width_180"
                    android:layout_height="@dimen/comm_height_32"
                    android:background="@color/transparent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:textColor="@color/white_FFFFFF"
                    android:password="true"
                    android:hint="6位数字或密码"
                    android:textColorHint="#c8c8c8"
                    android:maxLength="6"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/comm_height_60"
                android:orientation="horizontal"
                android:background="@drawable/icon_input_bg"
                android:layout_below="@id/ll_new_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_24"
                android:layout_marginLeft="@dimen/margin_24"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/confirm_pwd"
                    android:textColor="@color/white_FFFFFF"
                    android:paddingLeft="@dimen/padding_36"
                    android:gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/et_confirm_pwd"
                    android:layout_width="@dimen/comm_width_180"
                    android:layout_height="@dimen/comm_height_32"
                    android:background="@color/transparent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:textColor="@color/white_FFFFFF"
                    android:password="true"
                    android:hint="6位数字或密码"
                    android:textColorHint="#c8c8c8"
                    android:maxLength="6"/>
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comm_height_48"
            android:background="@color/black_434343"
            android:text="@string/submit"
            android:textColor="@color/white_FFFFFF"
            android:gravity="center"
            android:layout_margin="@dimen/margin_24"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</LinearLayout>
