<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/comm_height_100">
    <ImageView
        android:id="@+id/item_fun_img"
        android:layout_width="@dimen/comm_width_100"
        android:layout_height="@dimen/comm_height_80"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/margin_10"
        />
    <TextView
        android:id="@+id/item_fun_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="胜香园嗨唱乐翻天"
        android:layout_toRightOf="@id/item_fun_img"
        android:layout_marginTop="@dimen/margin_24"
        />
    <TextView
        android:id="@+id/item_fun_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格：498／3小时"
        android:layout_toRightOf="@id/item_fun_img"
        android:layout_below="@id/item_fun_name"
        android:layout_marginTop="@dimen/margin_4"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消费：100／小时"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/item_fun_img"
        android:layout_marginBottom="@dimen/margin_16"
        />
</RelativeLayout>
